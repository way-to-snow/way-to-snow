<div data-controller="maps">
  <div
    id="map"
    style="width: 100%;
    height: 90vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
  <div class="button-holder">
    <div class="button" data-action="click->maps#filter" data-value="">All resorts</i></div>
    <div class="button" data-action="click->maps#filter" data-value="favorites=true">my fav <i class="fas fa-heart"></i></div>
    <div class="button" data-action="click->maps#filter" data-value="new_snow=true">new <i class="far fa-snowflake"></i></div>
    <div class="button" data-action="click->maps#filter" data-value="lots_snow=true">lots <i class="far fa-snowflake"></i></div>
  </div>
  # of resorts shown: <%= @resorts.count %>
  <div class="marker"></div>
  <div data-controller="slider">
    <input type="range" name="travel-input" min="1" max="6" id="hours-input" value="6" data-action="change->slider#displayChoice">
    <output name="travel-output" id="hours-output">1</output>
    <label for="travel"> (hours) Max Travel Time</label>
    <div class="button" data-controller="maps" data-action="click->maps#setUserLocation" data-value="">Filter by distance!</div>
  </div>
</div>
